<%= turbo_frame_tag "modal" do %>
  <div data-controller="modal">
    <div data-action="click->modal#close" class="fixed z-10 w-full h-full top-0 left-0 bg-black bg-opacity-40"></div>
    <div data-modal-target="sidebar" class="fixed top-0 right-0 z-20 w-full sm:w-3/6 lg:w-2/6 h-full bg-white overflow-y-scroll shadow-lg flex flex-col ease-in-out duration-300 p-5 transform translate-x-full">
      <p class="cursor-pointer mb-4 text-2xl" data-action="click->modal#close">❌</p>
      <h2 class="font-bold text-3xl mb-4"><%= t('.tag') %></h2>

      <%= render 'form' %>
    </div>
  </div>
<% end %>

