<%= form_with model: @note do |form| %>
    <% @note.errors.full_messages.each do |error| %>
        <div>
            <%= error %>
        </div>
    <% end %>

    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>

    <div>
        <%= form.label :body %>
        <%= form.text_area :body %>   
    </div>

  <div class="field">
    <%= form.label :tag_ids, 'Tags' %>
    <%= form.collection_check_boxes :tag_ids, Tag.all, :id, :name %>
  </div>

    <%= form.submit %>

<% end %>