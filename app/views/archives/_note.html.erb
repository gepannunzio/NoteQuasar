<%= turbo_frame_tag "note_#{note.id}", 'data-turbo-frame': '_top' do %>
  <div class="note bg-white mb-2 rounded p-4 flex justify-between items-center mx-4">
    <div>
      <h2 class="text-2xl font-bold text-gray-800 mb-2"><%= note.title %></h2>
    </div>
    <div class="flex items-center space-x-2">
      <%= link_to t('common.show'), note_path(note), class: 'btn btn-primary', 'data-turbo-frame': '_top' %>
      <%= link_to t('common.edit'), edit_note_path(note), class: 'btn btn-secondary', 'data-turbo-frame': '_top' %>
      <%= link_to t('common.delete'), note_path(note) , data: {
    turbo_method: :delete, turbo_confirm: t('common.confirm')}, class: 'btn btn-danger', 'data-turbo-frame': '_top'%>
    </div>
  </div>
<% end %>